<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/yesNoDialog"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_rounded_bg_wh"
    android:orientation="vertical">

    <TextView android:id="@+id/yesNoTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dip"
    android:paddingLeft="23dip"
    android:paddingRight="23dip"
    android:text="Udinic+Kahana = love"
    />

        <TextView android:id="@+id/yesNoText"
        android:layout_width="290dip"
        android:layout_height="wrap_content"
        android:scrollHorizontally="false"
        android:paddingLeft="23dip"
        android:paddingRight="23dip"
        android:ellipsize="none"
        android:layout_gravity="left"
        />

    <View android:layout_width="fill_parent"
    android:id="@+id/horizontal_divider"
    android:layout_marginLeft="4dip"
    android:layout_marginRight="4dip"
    android:layout_height="0.9dp"
    android:background="#CCCCCC"/>

    <LinearLayout android:id="@+id/buttons"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="73dip">

        <com.udinic.general_testing.UdiniButton android:id="@+id/leftBtn"
        android:minWidth="145dip"
        android:layout_width="wrap_content"
        android:padding="7dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:textColor="#000000"
        android:background="@drawable/bg"
        android:text="no"
        android:textSize="26sp"
        />
        <!--android:background="@drawable/selector_item_bg_wh"-->

        <View android:layout_height="fill_parent"
        android:layout_width="0.9dp"
        android:background="#CCCCCC"/>

        <com.udinic.general_testing.UdiniButton android:id="@+id/rightBtn"
        android:minWidth="145dip"
        android:layout_width="wrap_content"
        android:padding="7dp"
        android:textSize="26sp"
        android:textColor="#000000"
        android:gravity="center"
        android:background="@drawable/bg"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:text="yes"/>
    </LinearLayout>
</LinearLayout>